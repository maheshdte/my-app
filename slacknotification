node{
    stage('SCM Checkout'){
        git 'http://github.com/javahometech/my-app'
    }
    stage('Compile-Package'){
        //Get Maven Home Path
        def mvnHome = tool name: 'Maven', type: 'maven'
        sh "${mvnHome}/bin/mvn package"
    }
    
    stage('Slack Notification'){
        slackSend baseUrl: 'https://hooks.slack.com/services/', channel: '#Friendsshare', message: 'Welcome to Slack', tokenCredentialId: 'a9020fee-3456-48fe-950e-070c4d07a6de', username: 'maheshdte'
    }
}
